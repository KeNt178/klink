{
    "manifest_version": 2,

    "name": "Klink",
    "description": "This Chrome extension will share any active tab through Facebook Messenger with one click.",
    "version": "0.1",
    "icons": {
        "512": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "js/jquery-3.0.0.min.js",
            "js/socket.io.js",
            "js/background.js"]
    },
    "permissions": [
        "activeTab"
    ]
}
